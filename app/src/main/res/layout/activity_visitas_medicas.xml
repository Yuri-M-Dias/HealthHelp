<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_visitas_medicas"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="HealthHelp" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_visitas_futuras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_right_left_textcard"
                android:paddingRight="@dimen/padding_right_left_textcard"
                android:paddingTop="@dimen/padding_top_textcard"
                android:text="Visitas Futuras:"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/consulta_vermelho" />
            <TextView
                android:id="@+id/textView_visitas_Realizadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_right_left_textcard"
                android:paddingRight="@dimen/padding_right_left_textcard"
                android:paddingTop="@dimen/padding_top_textcard"
                android:text="Visitas Realizadas:"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="1dp"
                android:padding="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/consulta_vermelho" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
