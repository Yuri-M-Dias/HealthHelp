<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="5"
    android:layout_gravity="fill_horizontal"
    android:background="@color/common_google_signin_btn_text_light_disabled">

    <TextView
        android:text="De"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />

    <Button
        android:text="Data Inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botao_data_inicio"
        android:layout_row="0"
        android:layout_column="1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="às"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_column="2"
        android:layout_row="0"
        android:gravity="center"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:text="a"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/textView3"
        android:layout_column="0"
        android:layout_row="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />

    <Button
        android:text="Data Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botao_data_final"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="às"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_column="2"
        android:layout_row="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal" />

    <Button
        android:text="@string/botao_dias_semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botao_dias_semana"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/imageButton"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_gravity="fill_vertical"
        style="@style/Widget.AppCompat.ImageButton"
        android:tint="@android:color/holo_red_dark"
        android:background="@color/common_google_signin_btn_text_light_disabled" />

    <Button
        android:text="Hora Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botao_hora_final"
        android:layout_column="3"
        android:layout_row="1"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:text="hora inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botao_hora_inicio"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_row="0"
        android:layout_column="3" />

</GridLayout>
