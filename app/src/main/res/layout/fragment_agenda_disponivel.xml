<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufg.inf.pes.healthhelp.view.AgendaFragment">

    <ProgressBar
        android:id="@+id/carregamento_horarios_disponiveis"
        style="@android:style/Widget.Material.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_sem_horarios_disponiveis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/mensagem_sem_horarios_disponiveis"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imagem_sem_horarios_disponiveis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Ícone representando a não existência de horários disponíveis para marcação de atendimentos"
        android:padding="@dimen/activity_vertical_margin"
        app:srcCompat="@drawable/sem_horario_disponivel" />

    <ListView
        android:id="@+id/listview_horarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
